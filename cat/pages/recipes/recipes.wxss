/* fileName: pages/recipes/recipes.wxss */
@import '../../public/weui.wxss';
@import '../../public/style.wxss';

page{padding: 83px 0 0 0; position: relative;}
.nav .nav-item{padding: 0 20px;}
.nav .nav-item.active::after{width: -webkit-calc(100% - 30px); width: calc(100% - 30px); left: 15px;}

.page{width: 100%;  min-height: -webkit-calc(100vh - 83px); min-height: calc(100vh - 83px);}

/* 分类 */
.page-0 .scroll-left{width: 100px; height: -webkit-calc(100vh - 83px); height: calc(100vh - 83px); background: #F5F5F5; position: fixed; top: 83px; left: 0;}
.page-0 .scroll-left::-webkit-scrollbar{width: 1px;}
.page-0 .left-lists{width: 100%; padding: 5px; box-sizing: border-box;}
.page-0 .left-list{width: 100%; height: 40px; line-height: 40px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; text-align: center; font-size: 16px; color: #646464;}
.page-0 .left-list.active{background: #FF9204; color: #FFF;}
.page-0 .scroll-right{width: -webkit-calc(100vw - 100px); width: calc(100vw - 100px); height: -webkit-calc(100vh - 83px); height: calc(100vh - 83px); background: #FFF; position: fixed; top: 83px; right: 0px;}
.page-0 .right-lists{width: 100%; padding: 20px 10px; font-size: 0; box-sizing: border-box;}
.page-0 .right-list{width: -webkit-calc(100% / 3); width: calc(100% / 3); display: inline-block; text-align: center; margin: 0 0 15px 0; vertical-align: top;}
.page-0 .right-list image{width: 55px; height: 55px; border-radius: 50%; background: #F5F5F5; margin-bottom: 5px;}
.page-0 .right-list text{width: 100%; line-height: 20px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; display: inline-block; font-size: 13px; color: #555;}

/* 最新 */
.page-1 .list-down text{line-height: 25px; font-size: 15px; color: #7B7B7B; margin: 0 20px 0 0;}

/* 求助 */
.page-2 .list-down-1{width: 100%;}
.page-2 .list-down-1 text{line-height: 30px; font-size: 15px; margin-right: 20px;  color: #7B7B7B;}
.page-2 .list-down-2{width: 100%;}
.page-2 .list-down-2 view{height: 30px; line-height: 30px; display: inline-block; margin-right: 20px; vertical-align: middle;}
.page-2 .list-down-2 view image{width: 17px; height: 17px; margin: 0 5px 0 0; display: inline-block; vertical-align: middle;}
.page-2 .list-down-2 view text{line-height: 30px; font-size: 15px; color: #909090;}

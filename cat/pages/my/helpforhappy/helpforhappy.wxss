/* fileName: pages/helpforhappy/helpforhappy.wxss */
@import '../../../public/style.wxss';


.list-down-1{width: 100%;}
.list-down-1 text{line-height: 30px; font-size: 15px; margin-right: 20px;  color: #7B7B7B;}
.list-down-2{width: 100%;}
.list-down-2 view{height: 30px; line-height: 30px; display: inline-block; margin-right: 20px; vertical-align: middle;}
.list-down-2 view image{width: 17px; height: 17px; margin: 0 5px 0 0; display: inline-block; vertical-align: middle;}
.list-down-2 view text{line-height: 30px; font-size: 15px; color: #909090;}

.page{width: 100%; padding: 20px; box-sizing: border-box;}

.page textarea{position: relative; z-index: 0 !important;}
.page .page-title{width: 100%; line-break: 30px; margin: 0 0 15px 0; font-size: 16px; color: #333;}
.page .input-item{width: 100%; height: 50px; border-radius: 5px; box-shadow: 0 0 1px rgba(100,100,100,.4); margin: 0 0 20px 0; background: #FFF; position: relative;}
.page .input-item input{width: 100%; height: 100%; line-height: 50px; padding: 0 10px; box-sizing: border-box; font-size: 15px; color: #646464; z-index: 1;}
.page .input-item image{width: 16px; height: 16px; position: absolute; top: 17px; right: 5px;}
.page .editor-menu{width: 100%; margin: 0 0 20px 0; padding: 10px; border-radius: 5px; box-sizing: border-box; background: #FFF; box-shadow: 0 0 1px rgba(100,100,100,.4); position: relative;}
.page .editor-menu .textimg-items{width: 100%;}
.page .editor-menu .textimg-item{width: 100%; position: relative; z-index: 1;}
.page .editor-menu .textimg-item .textarea-view{width: 100%; position: relative;}
.page .editor-menu .textimg-item .textarea-view textarea{width: 100%; min-height: 30px; margin: 0 0 10px 0; font-size: 15px; line-height: 25px; color: #646464; z-index: 1;}
.page .editor-menu .textimg-item .image-view{width: 100%; position: relative;}
.page .editor-menu .textimg-item .image-view image{width: 100%; border-radius: 5px; margin: 0 0 10px 0; position: relative;}
.page .editor-menu .textimg-item .image-view .delete-btn{width: 20px; height: 20px; background: rgba(0,0,0,.6); border-top-right-radius: 5px; display: inline-block; position: absolute; top: 0; right: 0;}
.page .editor-menu .textimg-item .image-view .delete-btn image{width: 15px; height: 15px; margin: 2.5px;}
.page .editor-main{width: 100%;}
.page .editor-main textarea{width: 100%; min-height: 60px; margin: 0 0 10px 0; font-size: 15px; line-height: 25px; color: #646464;}
.page .editor-main .btns{width: 100%;}
.page .editor-main .btns .btn{width: 25px; height: 25px; border-radius: 50%; margin: 0 15px 0 0; display: inline-block; vertical-align: top;}
.page .editor-main .btns image{width: 100%; height: 100%; border-radius: 50%;}
.page .banner-menu{width: 100%; height: 120px; margin: 0 0 50px 0; border-radius: 5px; box-shadow: 0 0 1px rgba(100,100,100,.4); background: #FFF; position: relative;}
.page .banner-imgadd{width: 100%; height: 100%; text-align: center; position: absolute; top: 0; left: 0;}
.page .banner-imgadd image{width: 50px; height: 50px; position: absolute; top: -webkit-calc((100% - 50px) / 2); top: calc((100% - 50px) / 2); left: -webkit-calc((100% - 50px) / 2); left: calc((100% - 50px) / 2);}
.page .banner-imgview{width: 100%; height: 100%;  border-radius: 5px; position: absolute; top: 0; left: 0; overflow: hidden;}
.page .banner-imgview image{width: 100%; border-radius: 5px;}
.page .banner-tip{width: 100%; line-height: 40px; font-size: 14px; color: #909090; text-align: center; position: absolute; bottom: -40px; left: 0;}
.page .price{width: 100%; height: 50px; font-size: 0; margin: 0 0 20px 0;}
.page .price input{width: -webkit-calc(100% - 30px); width: calc(100% - 30px); height: 100%; font-size: 15px; color: #646464; padding: 0 10px; box-sizing: border-box; border-radius: 5px ; box-shadow: 0 0 1px rgba(100,100,100,.4); background: #FFF; display: inline-block; vertical-align: top;}
.page .price text{width: 30px; height: 100%; line-height: 50px; text-align: right; display: inline-block; vertical-align: top; font-size: 15px; color: #333;}
.page .informations{width: 100%;}
.page .information-title{width: 100%; line-height: 30px; font-size: 16px; color: #333; margin: 0 0 5px 0;}
.page .map-menu{width: 100%; height: 120px; margin: 0 0 20px 0; border-radius: 5px; box-shadow: 0 0 1px rgba(100,100,100,.4); background: #FFF; position: relative;}
.page .map-menu .map-btn{width: 100%; height: 100%; line-height: 120px; font-size: 14px; color: #909090; text-align: center; position: absolute; top: 0; left: 0;}

.page .type-btns{width: 100%; font-size: 0; margin: 0 0 20px 0;}
.page .type-btn{width: -webkit-calc((100% - 40px) / 3); width: calc((100% - 40px) / 3); height: 30px; line-height: 30px; text-align: center; border-radius: 3px; font-size: 15px; box-shadow: 0 0 1px rgba(100,100,100,.7); background: #FFF; color: #646464; display: inline-block; vertical-align: top; margin: 0 20px 0 0;}
.page .type-btns .type-btn:last-child{margin: 0;}
.page .type-btns .type-btn.active{background: #FF9204; color: #FFF; box-shadow: 0 0 1px #FF9204;}


.down-btns{width: 100%; font-size: 0;}
.submit{width: -webkit-calc(100% - 40% - 22px); width: calc(100% - 40% - 22px); height: 44px; line-height: 44px; text-align: center; font-size: 16px; color: #FFF; border-radius: 5px; display: inline-block; vertical-align: middle; margin: 0 20px 0 0;}
.save-draft{width: 40%; height: 42px; line-height: 42px; text-align: center; font-size: 16px; color: #333; border-radius: 5px; border: 1px solid #909090; display: inline-block; vertical-align: middle;}
/* fileName: pages/index/index.wxss */
@import '../../public/style.wxss';

/* banner 轮播图样式 */
.banner{width: 100%; height: auto; background: #FFF; box-sizing: border-box; margin-top: 84px;}
.swiper-item{width: 100%; text-align: center; padding: 12px 0; overflow: hidden;}
.swiper-item .swiper-slide{width: -webkit-calc(100% - 24px); width: calc(100% - 24px); border-radius: 5px;  margin: 0 12px; overflow: hidden}
.banner image{width: 100%; height: auto; display: block; border-radius: 5px;}
.banner .wx-swiper-dots.wx-swiper-dots-horizontal{ margin-bottom: 2rpx;}
.banner .wx-swiper-dot{ width:15rpx; display: inline-flex; height: 15rpx; margin-left: 15rpx; justify-content:space-between;}
.banner .wx-swiper-dot::before{content: '';flex-grow: 1; background: rgba(255,255,255,0.8);border-radius: 8rpx;}
.banner .wx-swiper-dot-active::before{background:#FF9204;   }

/* 菜单 */
.menus{width: 100%; background: #FFF; padding: 10px 10px 5px 10px; box-sizing: border-box; font-size: 0; margin-bottom: 7px; position: relative;}
.menus::after{content: ''; width: 100%; height: 1px; -webkit-transform: scaleY(.3); transform: scaleY(.3); background: rgba(100,100,100,.3); position: absolute; bottom: 0; left: 0; z-index: 1;}
.menu-item{width: 20%; margin-bottom: 10px; text-align: center; display: inline-block; vertical-align: top;}
.menu-item image{width: 45px; height: 45px; background: #EFEFEF; border-radius: 50%; margin-bottom: 5px;}
.menu-item text{width: 100%; height: 20px; line-break: 20px; display: inline-block; font-size: 13px; color: #646464;}

.page-0{width: 100%;}
.page-1{padding-top: 83px;}

.guanggao .banner{margin: 0;}
.guanggao .banner image{margin: 0;}
.guanggao .banner .swiper-item{box-sizing: border-box; padding: 0;}
.guanggao .banner .swiper-slide{height: 100%;}
.guanggao .list-middle{padding: 0 0 12px 0;}
.guanggao .list-title{width: 100%; height: 30px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; display: inline-block; margin: 0 0 5px 0; padding: 10px 0px 0 0px; box-sizing: border-box; text-align: left;}
.guanggao .list-describe{width: 100%; height: 20px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; display: inline-block; padding: 0; box-sizing: border-box; text-align: left;}


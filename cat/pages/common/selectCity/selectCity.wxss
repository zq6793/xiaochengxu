/* pages/common/selectCity/selectCity.wxss */
.cityList {
     width: 100%;
     height: 100%;
     display: flex;
     flex-direction: column;
}
.citySlide {
     display: flex;
     flex-direction: column;
     width: 55rpx;
     height: calc(100% - 83px - 30px);
     padding: 10px 0; 
     box-sizing: border-box;
     position: absolute;
     top: 98px;
     right: 5px;
     border-radius: 45rpx;
     align-items: center;
     justify-content: center;
     color: #FFF;
     background: rgba(100,100,100,.4);
     z-index: 2;
}
.citySlideItem {
     width: 100%;
     /* padding-top: 5px;
     padding-bottom: 5px; */
     box-sizing: border-box;
     flex: 1;
     text-align: center;
     font-size: 27rpx;
}
.letterText {
     position: absolute;
     width: 80px;
     height: 80px;
     line-height: 80px;
     text-align: center;
     font-size: 22px;
     color: white;
     border-radius: 12rpx;
     background: rgba(100,100,100,.4);
}
.cityListLetter {
    width: 100%; 
    padding: 10px 0 5px 15px; 
    font-size: 20px; 
    font-weight: 500; 
    color: #555;
}
.cityListItem { 
    width: 100%;
    box-sizing: border-box;
    padding: 15px;
    margin-left: 0;
    font-size: 15px;
    background-color: white; 
    position: relative;
}
.cityListItem::after{
    content: ''; 
    width: 100%; 
    height: 1px; 
    -webkit-transform: scaleY(.3); 
    transform: scaleY(.3); 
    background: rgba(100,100,100,.3); 
    position: absolute; 
    bottom: 0; 
    left: 0;
}
.cityListItem:last-child::after{
    display: none;
}
.currentCity{width: 100%; padding: 20px 0 5px 15px; box-sizing: border-box;}
.currentCity text:first-child{ display: inline-block; margin: 0 10px 0 0; color: #333; font-size: 18px; font-weight: 500; vertical-align: middle;}
.currentCity text:last-child{ display: inline-block; color: #909090; font-size: 15px; vertical-align: middle;}
.historyCity,.hotCity{width: 100%; padding: 0 15px; box-sizing: border-box;}
.historyCity .historyCity-title,.hotCity .hotCity-title{width: 100%; line-height: 30px; font-size: 16px; color: #909090; margin: 5px 0;}
.historyCity .historyCity-lists,.hotCity .hotCity-lists{width: 100%; font-size: 0; padding: 0 20px 0 0; box-sizing: border-box;}
.historyCity .historyCity-list,.hotCity .hotCity-list{padding: 5px 17px; border-radius: 3px; margin: 0 15px 10px 0; box-shadow: 0 0 1px rgba(100,100,100,.4); background: #FFF; display: inline-block; font-size: 15px; color: #555;}

/* pages/common/invite_cat_participate/invite_cat_participate.wxss */
@import '../../../public/style.wxss';

page{background: #FFF;}

.header::after{content: ''; width: 100%; height: 1px; background: rgba(100, 100, 100, .3); -webkit-transform: scaleY(.3); transform: scaleY(.3); position: absolute; bottom: 0; left: 0;}
.header .header-r{width: 100%;}
.header .header-r .search{width: -webkit-calc(100% - 100px); width:calc(100% - 100px); left: 50px;top: 9px;}
.header .header-r .search-btn{width: 50px; height: 26px; line-height: 26px; text-align: center; font-size: 15px; color: #FF9204; display: inline-block; vertical-align: midle; position: absolute; top: 9px; right: 0px;}

.search-lists{width: 100%; padding: 44px 0 0 0;}
.search-list{width: 100%; padding: 0 15px; box-sizing: border-box; font-size: 0; position: relative;}
.search-list::after{content: ''; width: 100%; height: 1px; background: rgba(100, 100, 100, .3); -webkit-transform: scaleY(.3); transform: scaleY(.3); position: absolute; right: 0; bottom: 0;}
.search-list:last-child::after{display: none;}
.list-title{width: 100%; height: 40px; line-height: 40px; margin: 0 0 5px 0; font-size: 18px; color: #333; }
.list-title .more-btn{height: 100%; line-height: 40px; font-size: 14px; color: #909090; float: right;}
.list-items{width: 100%;}
.list-item{width: 100%; font-size: 0; margin: 0 0 10px 0;}
.list-item:last-child{margin: 0;}
.list-item-left{width: 40px; height: 40px; border-radius: 50%; overflow: hidden; display: inline-block; vertical-align: top; position: relative;}
.list-item-left image{width: 40px; height: auto; position: absolute; top: 50%; left: 50%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%);}
.list-item-right{width: -webkit-calc(100% - 40px); width: calc(100% - 40px); display: inline-block; padding: 0 0 10px 10px; box-sizing: border-box; vertical-align: top; position: relative;}
.list-item-right::after{content: ''; width: -webkit-calc(100% + 5px); width: calc(100% + 5px); height: 1px; background: rgba(100, 100, 100, .3); -webkit-transform: scaleY(.3); transform: scaleY(.3); position: absolute; right: -15px; bottom: 0;}
.list-item:last-child .list-item-right::after{display: none;}
.list-item-right-top{width: 100%; font-size: 0;}
.list-item-right-top .user-name{text-indent: 0;}
.list-item-right-top .user-level image{width: 17px; height: 17px;}
.list-item-right-top .choose-btn{height: 30px; display: inline-block; vertical-align: top; float: right;}
.wx-checkbox-input{
	display: none;
}
.ws-checkbox {
  display: inline-block;
  float: left;
  margin: 7px 0;
  width: 16px;
  height: 16px;
  background-image: url('data:image/png;base64,');
  background-size: 100%;
}

.ws-checkbox[checked] {
  background-image: url('data:image/png;base64,');
}

.list-item-right-down{width: 100%;}
.list-item-right-down text{line-height: 25px; font-size: 14px; color: #909090; display: inline-block; vertical-align: top; margin: 0 10px 0 0;}

.down-btns{width: 100%; font-size: 0; padding: 20px 15px; box-sizing: border-box;}
.invite-btn{width: -webkit-calc(100% - 40% - 22px); width: calc(100% - 40% - 22px); height: 44px; line-height: 44px; text-align: center; font-size: 16px; color: #FFF; border-radius: 5px; display: inline-block; vertical-align: middle; margin: 0 20px 0 0;}
.reset-btn{width: 40%; height: 42px; line-height: 42px; text-align: center; font-size: 16px; color: #333; border-radius: 5px; border: 1px solid #909090; display: inline-block; vertical-align: middle;}
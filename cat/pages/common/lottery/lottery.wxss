/* pages/common/lottery/lottery.wxss */
@import '../../../public/style.wxss';

.container{font-size: 0;}

/* banner 轮播图样式 */
.banner-menu{width: 100%; position: relative;}
.banner{width: 100%; height: auto; display: inline-block; background: #FFF; box-sizing: border-box; padding: 0;}
.swiper-item{width: 100%; height: 100%; display: inline-block; text-align: center; overflow: hidden;}
.swiper-item .swiper-slide{width: 100%; height: 100%; display: inline-block; overflow: hidden}
.banner image{width: 100%; height: auto; display: block;}
.banner .wx-swiper-dots.wx-swiper-dots-horizontal{ margin-bottom: 2rpx;}
.banner .wx-swiper-dot{ width:15rpx; display: inline-flex; height: 15rpx; margin-left: 15rpx; justify-content:space-between;}
.banner .wx-swiper-dot::before{content: '';flex-grow: 1; background: rgba(255,255,255,0.8);border-radius: 8rpx;}
.banner .wx-swiper-dot-active::before{background:#FF9204;   }
.imageCount {  width:120rpx;  height:50rpx;  background-color: rgba(0, 0, 0, 0);  border-radius:40rpx;  line-height:50rpx;  color:#fff;  text-align:center;  font-size:26rpx;  position:absolute;  right:0px; bottom:15rpx;}

/* 内容 */
.content{width: 100%; background: #FFF; padding: 0;}
.content-top{width: 100%; padding: 15px; box-sizing: border-box;}
.content-top .title{width: 100%; line-height: 30px; font-size: 17px; color: #333; margin: 0 0 10px 0;}
.content-top .describe{width: 100%; line-height: 25px; font-size: 14px; color: #555;}

.content-down{width: 100%;}
.down-items{width: 100%;}
.down-item{width: 100%; padding: 15px; box-sizing: border-box; position: relative;}
.down-item::before{content: ''; width: 100%; height: 1px; -webkit-transform: scaleY(.3); transform: scaleY(.3); background: rgba(100,100,100,.3); position: absolute; top: 0; left: 0; z-index: 1;}
.down-item .down-item-title{width: 100%; line-height: 30px; margin: 0 0 5px 0; font-size: 17px; color: #333;}
.down-item .down-item-title-right{height: 100%; line-height: 30px; font-size: 14px; color: #909090; float: right;}
.down-item .down-item-infos{width: 100%;}
.down-item .down-item-infos text{width: 100%; line-height: 25px; font-size: 14px; display: inline-block; color: #555;}
.down-item .radio-group{margin: 10px 0 0 0;}
.down-item .radio-group .radio{width: 100%; height: 30px; display: inline-block; margin: 0 0 10px 0; font-size: 15px; color: #646464;}
/* radio未选中时样式 */
.down-item .radio .wx-radio-input{border-radius: 50%;height: 18px;width: 18px;margin-top: -5rpx;}
.down-item .down-item-submit{width: 150px; height: 40px; line-height: 40px; text-align: center; font-size: 15px; color: #FFF; background:#FF9204; border-radius: 5px;}

.down-item.canyumingdan .down-item-infos{font-size: 0;}
.down-item.canyumingdan .down-item-infos text{width: 50%;}
.down-item .down-item-infos .down-item-infos-list{width: 100%; font-size: 0;}
.down-item .down-item-infos .down-item-infos-list-left{width: 60px; line-height: 25px; display: inline-block; vertical-align: top;}
.down-item .down-item-infos .down-item-infos-list-right{width: -webkit-calc(100% - 60px); width: calc(100% - 60px); line-height: 25px; display: inline-block; vertical-align: top;}
.down-item .down-item-infos .down-item-infos-list-right text{width: auto;line-height: 25px; display: inline-block; vertical-align: top; margin: 0 10px 0 0;}
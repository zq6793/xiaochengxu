/* pages/common/address/address.wxss */
@import '../../../public/style.wxss';

page{background: #F5F5F5; padding: 83px 0 0 0;}

.header .header-r{width: 100%;}
.header .header-r .search{width: -webkit-calc(100% - 60px); width:calc(100% - 60px); left: 30px;top: 9px;}

.nav .nav-item{padding: 0 20px;}
.nav .nav-item.active::after{width: -webkit-calc(100% - 30px); width: calc(100% - 30px); left: 15px;}

SelectCitiesView{width: 100%; height: -webkit-calc(100vh - 83px); height:calc(100vh - 83px); display: inline-block;}

/* 分类 */
.page-1 .scroll-left{width: 100px; height: -webkit-calc(100vh - 83px); height: calc(100vh - 83px); background: #F5F5F5; position: fixed; top: 83px; left: 0;}
.page-1 .scroll-left::-webkit-scrollbar{width: 1px;}
.page-1 .left-lists{width: 100%; padding: 5px; box-sizing: border-box;}
.page-1 .left-list{width: 100%; height: 40px; line-height: 40px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; text-align: center; font-size: 16px; color: #646464;}
.page-1 .left-list.active{background: #FF9204; color: #FFF;}
.page-1 .scroll-right{width: -webkit-calc(100vw - 100px); width: calc(100vw - 100px); height: -webkit-calc(100vh - 83px); height: calc(100vh - 83px); background: #FFF; position: fixed; top: 83px; right: 0px;}
.page-1 .right-lists{width: 100%; padding: 20px 10px; font-size: 0; box-sizing: border-box;}
.page-1 .right-list{width: -webkit-calc(100% / 3); width: calc(100% / 3); display: inline-block; text-align: center; margin: 0 0 15px 0; vertical-align: top;}

/* pages/common/user_detail/user_detail.wxss */
@import '../../../public/style.wxss';

.content{padding: 0;}

.content-top{width: 100%; background: #FFF; padding: 0 0 50px 0;  position: relative;}
.content-top-bg{width: 100%; font-size: 0;}
.content-top-bg image{width: 100%;}
.user-infos{width: 100%; position: relative; top: -40px;}
.nameaddlevel{width: 100%; margin-bottom: 0px; display: inline-block; text-align: center;}
.nameaddlevel .user-name{ font-size: 17px; color: #FFF;}
.user-infos .user-avatar{width: 70px; height: 70px; border-radius: 50%; overflow: hidden; position: absolute; top: 0; right: 10px;}
.user-infos .user-avatar image{width: 100%; height: 100%; border-radius: 50%; display: inline-block;}
.qianming{width: 100%; line-height: 25px; text-align: right; padding: 10px; box-sizing: border-box; font-size: 15px; color: #7B7B7B;position: absolute; bottom: 0;}

.content-middle{width: 100%; background: #FFF; padding: 1px 20px 10px 20px; box-sizing: border-box;}
.content-middle-top{width: 100%; box-shadow: 0 0 1px rgba(100,100,100,.5); background: #FDFDFD; font-size: 0; margin: 0 0 20px 0;}
.content-middle-top-lists{width: 100%; font-size: 0; position: relative;}
.content-middle-top-lists::after{content: ''; width: -webkit-calc(100% - 60px); width: calc(100% - 60px); height: 1px; -webkit-transform: scaleY(.3); transform: scaleY(.3); background: rgba(100,100,100,.3); position: absolute; bottom: 0; left: 30px;}
.content-middle-top-list{width: 50%; display: inline-block; padding: 15px 0; text-align: center; position: relative;}
.content-middle-top-list image{width: 25px; height: 25px; margin: 0 0 5px 0;}
.content-middle-top-list text{width: 100%; line-height: 20px; font-size: 15px; color: #555; display: inline-block;}
.content-middle-top-list::after{content: ''; width: 1px; height: -webkit-calc(100% - 30px); height: calc(100% - 30px); -webkit-transform: scaleX(.3); transform: scaleX(.3); background: rgba(100,100,100,.3); position: absolute; top: 15px; right: 0;}
.content-middle-top-list:last-child::after{display: none;}
.content-middle-top-items{width: 100%; font-size: 0; display: flex; justify-content: space-around;}
.content-middle-top-item{height: 44px; line-height: 44px; font-size: 14px; color: #646464; display: inline-block;}
.content-middle-top-item text{height: 44px; line-height: 44px; font-size: 16px; color: #555; display: inline-block; vertical-align: top;}
.content-middle-down{width: 100%; box-shadow: 0 0 1px rgba(100,100,100,.5); background: #FDFDFD; font-size: 0; margin: 0;}
.content-middle-down-items{width: 100%; position: relative; font-size: 0;}
.content-middle-down-items::after{content: ''; width: 100%; height: 1px; -webkit-transform: scaleY(.3); transform: scaleY(.3); background: rgba(100,100,100,.3); position: absolute; bottom: 0; left: 0;}
.content-middle-down-items:last-child::after{display: none;}
.content-middle-down-item{width: 25%; height: 44px; line-height: 44px; text-align: center; font-size: 14px; color:#646464; display: inline-block; vertical-align: top; position: relative;}
.content-middle-down-item::before{content: ''; width: 1px; height: 100%; -webkit-transform: scaleX(.3); transform: scaleX(.3); background: rgba(100,100,100,.3); position: absolute; left: 0; top: 0;}
.content-middle-down-item:nth-child(4n + 1)::before{display: none;}
.content-middle-down-item text{height: 44px; line-height: 44px; font-size: 16px; color: #555; display: inline-block; vertical-align: top;}

.content-down .list:first-child::before{display: none;}
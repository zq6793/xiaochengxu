/* pages/restaurant/article_detail/article_detail.wxss */
@import '../../../public/style.wxss';


.container{font-size: 0;}

/* banner 轮播图样式 */
.banner{width: 100%; height: auto; display: inline-block; background: #FFF; box-sizing: border-box; padding: 0;}
.swiper-item{width: 100%; height: 100%; display: inline-block; text-align: center; overflow: hidden;}
.swiper-item .swiper-slide{width: 100%; height: 100%; display: inline-block; overflow: hidden}
.banner image{width: 100%; height: auto; display: block;}
.banner .wx-swiper-dots.wx-swiper-dots-horizontal{ margin-bottom: 2rpx;}
.banner .wx-swiper-dot{ width:15rpx; display: inline-flex; height: 15rpx; margin-left: 15rpx; justify-content:space-between;}
.banner .wx-swiper-dot::before{content: '';flex-grow: 1; background: rgba(255,255,255,0.8);border-radius: 8rpx;}
.banner .wx-swiper-dot-active::before{background:#FF9204;   }

/* 帖子详情 */
.content-top{width: 100%; padding: 15px; box-sizing: border-box; background: #fff; position: relative;}
.content-top::after{content: ''; width: 100%; height: 1px; -webkit-transform: scaleY(.3); transform: scaleY(.3); background: rgba(100,100,100,.3); position: absolute; bottom: 0; left: 0; z-index: 1;}
.userinfo{width: 100%; font-size: 0;}
.user-btns{width: auto; text-align: right; display: inline-block; vertical-align: middle; float: right;}
.user-btn-left{width: 25px; height: 23px; line-height: 21px; margin: 10px 10px 10px 0; text-align: center; font-size: 15px; border-radius: 3px; background: #FF9204; color: #FFF; display: inline-block; vertical-align: middle;}
.user-btn-right{min-width: 50px; text-align: center; padding: 2px 3px; font-size: 13px; color: #FF9204; border: 1px solid #FF9204; border-radius: 3px; display: inline-block; vertical-align: middle;}
.title-name{width: 100%; line-height: 25px; font-size: 16px; color: #333; margin: 10px 0;}
.describe{width: 100%; line-height: 20px; font-size: 15px; color: #909090;}
.referees{width: 100%; line-break: 20px; margin: 10px 0; font-size: 13px; color: #909090;}
/* 帖子图文详情 */
.content-middle{width: 100%; padding: 15px; box-sizing: border-box; background: #FFF; position: relative;}
.content-middle::after{content: ''; width: 100%; height: 1px; -webkit-transform: scaleY(.3); transform: scaleY(.3); background: rgba(100,100,100,.3); position: absolute; bottom: 0; left: 0; z-index: 1;}
.info-lists{width: 100%;}
.info-list{width: 100%;}
.info-list .text{width: 100%; line-height: 27px; font-size: 16px; color: #333; margin: 0 0 15px 0;}
.info-list .image{width: 100%; margin: 0 0 15px 0;}
.info-list .image image{width: 100%; height: auto; border-radius: 5px; display:block;}
.info-down{width: 100%;}
.info-down view{width: 100%; margin: 0 0 10px 0;}
.info-down view text{line-height: 20px; font-size: 15px; color: #909090; display: inline-block; vertical-align: middle;}
.info-down .price{font-size: 16px;}
.info-down .referees{width: 100%; line-break: 20px; margin: 10px 0; font-size: 13px; color: #909090;}


.content-down{width: 100%; background: #FFF;}
.content-down-list{width: 100%; padding: 15px; box-sizing: border-box; position: relative;}
.content-down-list::after{content: ''; width: 100%; height: 1px; -webkit-transform: scaleY(.3); transform: scaleY(.3); background: rgba(100,100,100,.3); position: absolute; bottom: 0; left: 0; z-index: 1;}
/* 餐馆信息 */
.ct-infos-top{width: 100%; font-size: 0; margin: 0 0 5px 0;}
.ct-infos-name{line-height: 30px; font-size: 17px; color: #333; display: inline-block; vertical-align: middle;}
.ct-infos-price{line-height: 30px; font-size: 15px; color: #909090; margin: 0 0 0 10px; display: inline-block; vertical-align: middle;}
.ct-infos-jvli{line-height: 30px; float: right;}
.ct-infos-jvli image{width: 9px; margin: 0 3px 0 0; display: inline-block; vertical-align: middle;}
.ct-infos-jvli text{line-height: 30px; font-size: 13px; color: #909090; display: inline-block; vertical-align: middle;}
.ct-infos-middle{width: 100%;}
.ct-infos-middle-title{width: 100%; line-height: 30px; margin: 0 0 5px 0;font-size: 15px;}
.ct-infos-middle-items{width: 100%;}
.ct-infos-middle-item{width: 100%; font-size: 0; margin: 0 0 5px 0;}
.ct-infos-middle-item-left{width: 50px; line-height: 25px; font-size: 15px; color: #909090; display: inline-block; vertical-align: top;}
.ct-infos-middle-item-right{width: -webkit-calc(100% - 50px); width: calc(100% - 50px); line-height: 25px; font-size: 15px; color: #555; display: inline-block; vertical-align: top;}
.ct-infos-middle-item-right text{line-height: 25px; padding: 0 5px; font-size: 15px; color: #555; margin: 0 10px 0 0; display: inline-block; vertical-align: middle;}
.caixi-items text{box-shadow: 0 0 1px rgba(100,100,100,.6);}
.map{width: 100%;}
.map image{width: 100%;}


.content-down-list-title{width: 100%; line-height: 30px; margin: 0 0 5px 0; color: #333; font-size: 17px;}
.content-down-list .referees{margin: 0 0 10px 0;}
.content-down-list .describe{font-size: 14px; color: #555; line-height: 25px; margin: 0 0 5px 0;}
.content-down-list .down{width: 100%;}
.content-down-list .down text{line-height: 25px; font-size: 15px; color: #8B8B8B; margin: 0 25px 0 0; display: inline-block; vertical-align: top;}
/* 相关求助问题 */
.qzwt-infos{width: 100%;}
.qzwt-text{width: 100%; line-height: 25px; font-size: 14px; color: #555;}

/* 好友正在推荐该餐馆 */
.content-down-list-item{width: 100%; margin: 0 0 10px 0;}

/* 转发 */
.zf-main .content-down-list-title .more{line-height: 30px; font-size: 13px; display: inline-block; color: #909090; float: right;}
.zf-main .content-down-list-title .more image{width: 14px; margin: 6px 0 10px 0px; display: inline-block; vertical-align: middle;}
.zf-main .content-down-list-item{width: 100%; font-size: 0; }
.zf-main .content-down-list-item text{width: 33.33%; height: 30px; line-height: 30px; font-size: 13px; color: #909090; display: inline-block; overflow:hidden; text-overflow: ellipsis; white-space: nowrap; vertical-align: middle;}

/* 底部 菜单 */
.footer{width: 100%; height: 50px; background: #FFF; position: fixed; bottom: 0; left: 0; z-index: 2;}
.footer::before{content: ''; width: 100%; height: 1px; -webkit-transform: scaleY(.3); transform: scaleY(.3); background: rgba(100,100,100,.3); position: absolute; top: 0; left: 0; z-index: 1;}
.footer-items{width: 100%; font-size: 0; display: flex; justify-content: space-around;}
.footer-item{height: 100%; text-align: center; display: inline-block; vertical-align: top; position: relative;}
.footer-item-icon{width: 20px; height: 20px; margin: 8px 0 3px 0;}
.footer-item-name{width: 100%; height: 15px; line-height: 13px; font-size: 13px; color: #909090; display: inline-block; }
.footer-item-badge{height: 15px; line-height: 15px; font-size: 11px; color: #333; display: inline-block; position: absolute; top: 5px; right: -5px;}
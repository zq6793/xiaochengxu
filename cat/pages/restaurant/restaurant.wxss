/* 筛选 排序菜单 */
.menu-shaixuan .menu-lists{width: 100%; max-height: 100%; display: inline-block; background: #FFF; position: relative; z-index: 1;}
.menu-shaixuan .menu-list{width: 100%; padding: 0 15px; box-sizing: border-box;}
.menu-shaixuan .menu-list-title{width: 100%; height: 40px; line-height: 40px; font-size: 15px; color: #FF9204;}
.menu-shaixuan .menu-list-items{width: 100%; font-size: 0;}
.menu-shaixuan .menu-list-item{width: -webkit-calc((100% - 40px) / 5); width: calc((100% - 40px) / 5); height: 30px; line-height: 30px; overflow: hidden; text-align: center; text-overflow: ellipsis; white-space: nowrap; border-radius: 3px; font-size: 14px; color: #7B7B7B; box-shadow: 0 0 1px rgba(100,100,100,.5) inset; margin: 0 10px 10px 0px; background: #FFF; display: inline-block; vertical-align: top; position: relative;}
.menu-shaixuan .menu-list-item:nth-child(5n){margin: 0 0 10px 0;}
.menu-shaixuan .menu-list-item.active{background: #FF9204; color: #FFF; box-shadow: 0 0 1px #FF9204 inset;}
.menu-shaixuan .menu-down-btns{width: 100%; font-size: 0; padding: 15px 15px 20px 15px; box-sizing: border-box;}
.menu-shaixuan .reset-btn{width: 40%; height: 38px; line-height: 38px; text-align: center; font-size: 16px; color: #333; border-radius: 5px; border: 1px solid #909090; display: inline-block; vertical-align: middle;}
.menu-shaixuan .submit-btn{width: -webkit-calc(100% - 40% - 22px); width: calc(100% - 40% - 22px); height: 40px; line-height: 40px; text-align: center; font-size: 16px; color: #FFF; background: #FF9204; border-radius: 5px; display: inline-block; vertical-align: middle; margin: 0 0px 0 20px;}
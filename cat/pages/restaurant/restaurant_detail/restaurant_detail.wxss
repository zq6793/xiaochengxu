/* pages/restaurant/home_detail/home_detail.wxss */
@import '../../../public/style.wxss';

.container{font-size: 0;}

/* banner 轮播图样式 */
.banner-menu{width: 100%; position: relative;}
.banner{width: 100%; height: auto; display: inline-block; background: #FFF; box-sizing: border-box; padding: 0;}
.swiper-item{width: 100%; height: 100%; display: inline-block; text-align: center; overflow: hidden;}
.swiper-item .swiper-slide{width: 100%; height: 100%; display: inline-block; overflow: hidden}
.banner image{width: 100%; height: auto; display: block;}
.banner .wx-swiper-dots.wx-swiper-dots-horizontal{ margin-bottom: 2rpx;}
.banner .wx-swiper-dot{ width:15rpx; display: inline-flex; height: 15rpx; margin-left: 15rpx; justify-content:space-between;}
.banner .wx-swiper-dot::before{content: '';flex-grow: 1; background: rgba(255,255,255,0.8);border-radius: 8rpx;}
.banner .wx-swiper-dot-active::before{background:#FF9204;   }
.imageCount {  width:120rpx;  height:50rpx;  background-color: rgba(0, 0, 0, 0);  border-radius:40rpx;  line-height:50rpx;  color:#fff;  text-align:center;  font-size:26rpx;  position:absolute;  right:0px; bottom:15rpx;}

.content-top{width: 100%;}
.tongbao{width: 100%; font-size: 0; background: #EF2D00;}
.tongbao-left{width: 70px; text-align: center; display: inline-block; vertical-align: middle;}
.tongbao-left image{width: 40px; max-height: 40px;}
.tongbao-right{width: -webkit-calc(100% - 70px); width: calc(100% - 70px); display: inline-block; padding: 10px; box-sizing: border-box; line-height: 25px; font-size: 14px; color: #FFF; vertical-align: middle}
.restaurant-infos{width: 100%; font-size: 0; background: #FFF; padding: 15px 0 0px 0;}
.infos-left{width: 70px; text-align: center; display: inline-block; vertical-align: top;}
.infos-left image{width: 50px; height: 50px; border-radius: 50%;}
.infos-right{width: -webkit-calc(100% - 70px); width: calc(100% - 70px); display: inline-block; vertical-align: top;}
.infos-title{width: 100%; line-height: 50px; font-size: 18px; color: #333;}
.infos-biaoqian{width: 100%;}
.infos-biaoqian text{line-height: 25px; font-size: 14px; color: #909090; margin: 0 15px 0 0;}

.content-middle{width: 100%; background: #FFF; box-sizing: border-box;}
.middle-lists{width: 100%;}
.middle-list{width: 100%; padding: 10px 15px 15px 15px; background: #FFF; box-sizing: border-box; position: relative;}
.middle-list::after{content: ''; width: 100%; height: 1px; -webkit-transform: scaleY(.3); transform: scaleY(.3); background: rgba(100,100,100,.3); position: absolute; bottom: 0; left: 0;}
.middle-list-title{width: 100%; line-height: 30px; margin: 0 0 10px 0; font-size: 18px; color: #333;}
.middle-list-title-right{line-height: 30px; font-size: 14px; color: #909090; float: right;}
.middle-list-texts text{line-height: 25px; display: inline-block; font-size: 15px; color: #909090; margin: 0 10px 0 0;}


/* 推荐菜 */
.middle-list.tuijiancai .middle-list-items{width: 100%; padding: 5px 0 10px 0; font-size: 0;}
.middle-list.tuijiancai .middle-list-item{width: -webkit-calc((100% - 30px) / 3); width: calc((100% - 30px) / 3); margin: 0 15px 0 0; display: inline-block; vertical-align: top;}
.middle-list.tuijiancai .middle-list-items .middle-list-item:last-child{margin: 0;} 
.middle-list.tuijiancai .middle-list-item image{width: 100%; height: -webkit-calc((100vw - 30px - 30px) / 3); height: calc((100vw - 30px - 30px) / 3); display: inline-block; border-radius: 5px;}
.middle-list.tuijiancai .middle-list-texts{width: 100%;}
.middle-list.tuijiancai .middle-list-texts text{line-height: 25px; font-size: 15px; color: #909090; margin: 0 10px 0 0; display: inline-block; vertical-align: top;}

/* 优惠 */
.middle-list.youhui .middle-list-tip.active{line-height: 25px; font-size: 15px;}
.middle-list.youhui .middle-list-text{width: 100%; font-size: 0;}
.middle-list.youhui .middle-list-text text{margin: 0;}
.middle-list.youhui .middle-list-text .middle-list-text-left{width: 50px; line-height: 25px; font-size: 15px; color: #909090; display: inline-block; vertical-align: top;}
.middle-list.youhui .middle-list-text .middle-list-text-right{width: -webkit-calc(100% - 50px); width: calc(100% - 50px); line-height: 25px; font-size: 15px; color: #909090; display: inline-block; vertical-align: top;}

/* 地址 */
.middle-list.dizhi .dizhi-top{width: 100%; font-size: 0; margin: 0 0 10px 0;}
.middle-list.dizhi .dizhi-top .dizhi-top-left{width: -webkit-calc(100% - 50px); width: calc(100% - 50px); display: inline-block; padding: 0 10px 0 0; box-sizing: border-box; line-height: 25px; font-size: 16px; color: #333; vertical-align: middle; position: relative;}
.middle-list.dizhi .dizhi-top .dizhi-top-left::after{content: ''; width: 1px; height: 100%; -webkit-transform: scaleX(.3); transform: scaleX(.3); background: rgba(100,100,100,.3); position: absolute; top: 0; right: 0; z-index: 1;}
.middle-list.dizhi .dizhi-top .dizhi-top-right{width: 50px; display: inline-block; vertical-align: middle;}
.middle-list.dizhi .dizhi-top .dizhi-top-right image{width: 30px; margin: 10px 0 10px 20px;}
.middle-list.dizhi .dizhi-map{width: 100%;}
.middle-list.dizhi .dizhi-map image{width: 100%; height: auto; display: block; border-radius: 5px;}

/* 标签 + 提示 */
.middle-list.biaoqian .middle-list-texts text,
.middle-list.tishi .middle-list-texts text
{line-height: 25px; margin: 0 10px 0 0; display: inline-block; font-size: 15px; color: #909090; vertical-align: top;}

/* 选项卡菜单 */
.nav{height: auto; font-size: 0; padding: 20px 0; position: relative; top: 0; z-index: 1;}
.nav .nav-item{width: 33.33%; line-height: 0; padding: 0; text-align: center; display: inline-block; vertical-align: top; position: relative;}
.nav .nav-item.active::after{display: none;}
.nav-item image{width: 50px; height: 50px; border-radius: 50%; margin: 0 0 10px 0; box-shadow: 0 0 1px rgba(100,100,100,.3);}
.nav-item.active image{box-shadow: none;}
.nav-item text{width: 100%; line-height: 20px; font-size: 14px; color: #909090; display: inline-block;}
.nav .nav-item.active text{color: #FF9204;}

/* 动态 */
.media-list{width: 100%; font-size: 0;}
.media-list-left{width: 35%; display: inline-block; vertical-align: middle; position: relative;}
.media-list-left image{width: 100%; border-radius: 5px;}
.media-list-left .media-mask{width: 100%; height: 100%; text-align: center; border-radius: 5px; background: rgba(0,0,0,.4); position: absolute; top: 0; left: 0;}
.media-list-left .media-mask image{width: 30px; height: 30px; position: absolute; top: -webkit-calc(50% - 15px); top: calc(50% - 15px); left: -webkit-calc(50% - 15px); left: calc(50% - 15px);}
.media-list-right{width: 65%; padding: 0 0 0 15px; box-sizing: border-box; display: inline-block; vertical-align: middle;}
.media-list-right .media-list-title{width: 100%; line-height: 25px; font-size: 16px; color: #333;text-overflow: -o-ellipsis-lastline; overflow: hidden;  text-overflow: ellipsis;
  display: -webkit-box; -webkit-line-clamp: 2; line-clamp: 2; -webkit-box-orient: vertical;}
.media-list-right .media-list-tip{width: 100%; line-height: 25px; font-size: 14px; color: #909090;text-overflow: -o-ellipsis-lastline; overflow: hidden;  text-overflow: ellipsis;
  display: -webkit-box; -webkit-line-clamp: 2; line-clamp: 2; -webkit-box-orient: vertical;}

/* 问答 */
.wenda-item{width: 100%; margin: 0 0 10px 0;}
.wenda-item-title{width: 100%; line-height: 25px; font-size: 16px; color: #333;}
.wenda-item-tip{width: 100%; line-height: 25px; font-size: 14px; color: #909090;}
.wenda-down{width: auto; display: inline-block;}
.wenda-down image{width: 20px; height: 20px; margin: 0 5px 0 0; display: inline-block; vertical-align: middle;}
.wenda-down text{line-height: 20px; font-size: 14px; color: #909090; display: inline-block; vertical-align: middle;}

.list-down .rating.active{color: #FF9204;}
.page-2 .lists .list:first-child::before{display: none;}
/* pages/restaurant/special_detail/special_detail.wxss */
@import '../../../public/style.wxss';

.container{font-size: 0;}

/* banner 轮播图样式 */
.banner{width: 100%; height: auto; display: inline-block; background: #FFF; box-sizing: border-box; padding: 0;}
.swiper-item{width: 100%; height: 100%; display: inline-block; text-align: center; overflow: hidden;}
.swiper-item .swiper-slide{width: 100%; height: 100%; display: inline-block; overflow: hidden}
.banner image{width: 100%; height: auto; display: block;}
.banner .wx-swiper-dots.wx-swiper-dots-horizontal{ margin-bottom: 2rpx;}
.banner .wx-swiper-dot{ width:15rpx; display: inline-flex; height: 15rpx; margin-left: 15rpx; justify-content:space-between;}
.banner .wx-swiper-dot::before{content: '';flex-grow: 1; background: rgba(255,255,255,0.8);border-radius: 8rpx;}
.banner .wx-swiper-dot-active::before{background:#FF9204;   }

.content-top{width: 100%; background: #FFF; margin: 0 0 10px 0; padding: 5px 15px 15px 15px; box-sizing: border-box; position: relative;}
.content-top::after{content: ''; width: 100%; height: 1px; -webkit-transform: scaleY(.3); transform: scaleY(.3); background: rgba(100,100,100,.3); position: absolute; bottom: 0; left: 0; z-index: 1;}

/* 餐馆名称 */
.name{width: 100%; line-height: 40px; font-size: 18px; color: #333;}
.referees{width: 100%; line-height: 20px; font-size: 14px; color: #909090; margin: 0 0 15px 0;}
.info-lists{width: 100%;}
.info-list{width: 100%;}
.info-list .text{width: 100%; line-height: 27px; font-size: 16px; color: #333; margin: 0 0 15px 0;}
.info-list .image{width: 100%; margin: 0 0 15px 0;}
.info-list .image image{width: 100%; height: auto; border-radius: 5px; display:block;}
.info-down{width: 100%;}
.info-down image{width: 15px; height: 15px; margin: 0 5px 0 0; display: inline-block; vertical-align: middle;}
.info-down text{line-height: 20px; font-size: 13px; color: #909090; display: inline-block; vertical-align: middle;}

/* 排行列表 */
.content-down{width: 100%; position: relative;}
.content-down::before{content: ''; width: 100%; height: 1px; -webkit-transform: scaleY(.3); transform: scaleY(.3); background: rgba(100,100,100,.3); position: absolute; top: 0; left: 0; z-index: 1;}
.content-down-title{width: 100%; height: 50px; line-height: 50px; background: #fff; font-size: 18px; color: #333; padding: 0 15px; box-sizing: border-box;}
.orderby-items{position: relative; top: 0;}
.orderby-items::after{top: 0; bottom: auto;}
.lists{width: 100%;}
.list .list-top{padding-bottom: 0px;}
.list .list-middle{padding-bottom: 12px;}
.list .list-middle-top{width: 100%;}
.list .list-middle-top view{width: 100%; margin-bottom: 5px;}
.list .list-middle-top view text{line-height: 25px; font-size: 14px; color: #909090; margin: 0 10px 0 0; display: inline-block; vertical-align: middle;}
.list .list-middle .list-title{line-height: 25px;}
.list .list-middle .list-title text{line-height: 25px; font-size: 16px; color: #909090; margin: 0 0 0 5px; display: inline-block; vertical-align: top;}
.list .list-middle .list-title.active{color: #FF9204;}
.list .guanggao.list .list-top,.page-1 .bangdan.list .list-top{padding-bottom: 10px;}
